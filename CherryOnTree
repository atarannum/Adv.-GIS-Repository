import random
random.randrange(0,7)
cherriesOntree = 10
spinOptions = [-1, -2,-3,-4,2,2,10]
attempts = 0
while cherriesOntree > 0:
    spinOutput = spinOptions[random.randrange(0,7)]
    cherriesOntree = cherriesOntree + spinOutput
    print(f"You spun {spinOutput}")
    print(cherriesOntree)
    if cherriesOntree > 10:
        cherriesOntree = 10
        print(f"You have now {cherriesOntree} cherries on your tree")
    elif cherriesOntree < 0:
        cherriesOntree = 0
        print(f"You got {cherriesOntree} cherries on your tree, Hi Ho Cherrie-O!!")
    attempts += 1
    print(f"you spun {attempts} times")
print(attempts)
